<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/item"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/back_card_coture">

            <LinearLayout
                android:id="@+id/layout_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_compte"
                    android:layout_width="match_parent"


                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/back_card_coture">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/cheque" />

                        <TextView
                            android:id="@+id/txt_libelle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="libelle"
                            android:textColor="@color/color_g_16"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/txt_etat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:paddingRight="5dp"
                            android:text="etat" />

                        <Button
                            android:id="@+id/bt_modif_cheque"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_modifier" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_numpiece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="tf/888888"
                        android:textColor="@color/color15"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="10/10/2020"
                        android:textColor="@color/color20" />

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/lightgray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/cercel_beige"
                        android:padding="2dp"
                        android:src="@drawable/ic_dollar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="40dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="94dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="Recu"
                                android:textColor="@color/colorAccent" />

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:text="Restant"
                                android:textColor="@color/colorAccent" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:text="VersÃ©"
                                android:textColor="@color/colorAccent" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="0dp"
                            android:background="@color/lightgray" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_montant_recu"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="000.000"
                                android:textColor="@color/colortxt" />

                            <TextView
                                android:id="@+id/txt_montant_restant"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="000.000"
                                android:textColor="@color/colortxt" />

                            <TextView
                                android:id="@+id/txt_montant_verser"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="000.000"
                                android:textColor="@color/colortxt" />


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="5dp"
                android:text="Liste reglement"
                android:textColor="@color/back_card_coture"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <GridView
                android:id="@+id/grid_ligne_reg"
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>