<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/round"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/roundgris"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/qt"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/round_qt"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="128"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="serif" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/barverticale" />


        <TextView
            android:id="@+id/txt_marque"
            android:layout_width="140dp"
            android:layout_height="wrap_content"

            android:text="TONINO LAMBORGHINI"
            android:textColor="#04022d"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/barverticale" />


        <TextView
            android:id="@+id/txt_famille"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="MO"
            android:textColor="#04022d"
            android:textSize="16sp"
            android:typeface="serif" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/barverticale" />



        <TextView
            android:id="@+id/txt_total_ht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="236.258 DT "
            android:textColor="#04022d"
            android:textSize="16sp"
            android:typeface="serif"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>