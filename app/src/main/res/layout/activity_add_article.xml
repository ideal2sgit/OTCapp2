<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faten.testsql.AddArticle">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:id="@+id/textView43"
                android:textStyle="bold"
                android:textColor="#575555"
                android:textIsSelectable="false"
                android:textSize="18dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/designation" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference"
                android:id="@+id/textView46"
                android:textStyle="bold"
                android:textColor="#575555"
                android:textIsSelectable="false"
                android:textSize="18dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reference" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Famille "
                android:id="@+id/textView40"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Spinner
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinfamille" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:id="@+id/textView41"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spintype" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marque"
                android:id="@+id/textView42"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Spinner
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinmarque" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="couleur"
                android:id="@+id/textView45"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spincouleur" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fourniseur"
                android:id="@+id/textView48"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinfournisseur" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix et Remise"
                android:id="@+id/textView44"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#070258" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btprix"
                android:background="@drawable/btajout"
                android:layout_marginLeft="130dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stockable"
                android:id="@+id/stockable"
                android:checked="false"
                android:textStyle="bold"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destockage"
                android:id="@+id/destokage"
                android:checked="false"
                android:textStyle="bold"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actif"
                android:id="@+id/actif"
                android:checked="false"
                android:textStyle="bold"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/btnvalider"
                android:background="@drawable/valider" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/btannuler"
                android:background="@drawable/exit" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
