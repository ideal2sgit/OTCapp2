<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_depot"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:weightSum="1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/item_tel_depot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_weight="1">



                <ImageView
                    android:id="@+id/img_tel"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_call_phone"/>


            <TextView
                android:id="@+id/txt_libelle_depot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Depot"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:layout_marginRight="80dp">




                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#c9c9c9" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_quantite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="360"
                        android:textColor="@color/gris"
                        android:textStyle="bold"
                        android:layout_margin="2dp"/>



                </LinearLayout>

            </LinearLayout>



            <android.support.constraint.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:layout_marginRight="35dp" >


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_cercel_qt"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    app:backgroundTint="@color/ripple_lite" />


                <TextView
                    android:id="@+id/txt_nbr_click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="10dp"
                    android:text="1"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    />

            </android.support.constraint.ConstraintLayout>


            <CheckBox
                android:id="@+id/cb_select_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:buttonTint="@color/yello"
                android:clickable="false"
                />



        </RelativeLayout>








    </android.support.v7.widget.CardView>


</LinearLayout>
