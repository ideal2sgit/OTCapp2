<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SuivieMensuelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TabLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tab_mois_annee"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#e9e9e9"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:tabIndicatorColor="#7F0007"
            app:tabSelectedTextColor="#7F0007"
            app:tabTextColor="@color/gris"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">




                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Total Net HT"
                    android:textColor="#7F0007"
                    android:textSize="16sp"
                    android:typeface="serif" />




                <TextView
                    android:id="@+id/txt_total_ttc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="---.-- DT"
                    android:textColor="#7F0007"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:gravity="right"/>

            </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_entete"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/round_qt"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="QT"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:typeface="serif" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/barverticale" />


                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Marque"
                    android:textColor="#04022d"
                    android:textSize="16sp"
                    android:typeface="serif" />


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#04022d"
                    android:textSize="16sp"
                    android:typeface="serif" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total NET HT"
                    android:textColor="#04022d"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/lv_list_marque_vendu_par_mois"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>