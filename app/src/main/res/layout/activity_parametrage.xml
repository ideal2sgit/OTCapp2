<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding = "16dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="IP : "
                android:id="@+id/textView"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#06035e" />


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/buttonround">

                <EditText
                    android:id="@+id/ed_ip_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="41.225.235.133"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"/>

            </RelativeLayout>

            <!--  41.231.87.241
                  41.230.60.8
                  192.168.1.142

                   41.225.235.133  OTC-->
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Base : "
                android:id="@+id/textView2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#06035e"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/buttonround">


                <EditText
                    android:id="@+id/ed_db_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="OTC-Test"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"/>

                <!--
                ProduitsRestaurant
                JAOUDA1
                I2S_COM
                -->
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="user : "
                android:id="@+id/text"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#06035e"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/buttonround">
                <EditText
                    android:id="@+id/ed_user_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="sa"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:editable="false"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/tt"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#06035e"/>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/buttonround">

                <EditText
                    android:id="@+id/ed_password_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="ideal2s"
                    android:layout_marginLeft="10dp"
                    android:background="#00000000"
                    android:editable="false"/>

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/roundgris"
                android:shadowColor="#0D5BA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_marginLeft="5dp"/>


            <Button
                android:id="@+id/btn_connect_server"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:background="@drawable/round_rouge"
                android:shadowColor="#0D5BA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="#FFF"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

